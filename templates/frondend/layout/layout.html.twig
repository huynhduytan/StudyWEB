<!doctype html>
<html lang="vi" class="h-100">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>
        Trang web bán hàng Salomon |
        {% block title %}
        {% endblock %}
    </title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/web02/public/vendor/bootstrap/css/bootstrap.min.css" type="text/css" />
    <!-- Font awesome -->
    <link rel="stylesheet" href="/web02/public/vendor/font-awesome-4.7.0/css/font-awesome.min.css" type="text/css" />

    <!-- Custom css - Các file css do chúng ta tự viết -->
    <link rel="stylesheet" href="/StudyWEB/frontend/css/style.css" type="text/css" />

    <!-- Block custom-styles - Đục lỗ trên giao diện bố cục chung, đặt tên là `custom-styles` -->
    {% block customstyles %}
    {% endblock %}
    <!-- End block custom-styles -->
</head>

<body>
    <!-- header -->
    {{ include('frontend/layouts/includes/header.html.twig') }}
    <!-- end header -->

    <main role="main" class="content-wrapper">
        <!-- Block content - Đục lỗ (placeholder) trên giao diện bố cục chung, đặt tên là `content` -->
        {% block content %}
        {% endblock %}
        <!-- End block content -->
    </main>

    <!-- footer -->
    {{ include('frontend/layouts/includes/footer.html.twig') }}
    <!-- end footer -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/web02/public/vendor/jquery/jquery.min.js"></script>
    <script src="/web02/public/vendor/popperjs/popper.min.js"></script>
    <script src="/web02/public/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Custom script - Các file js do mình tự viết -->
    <script src="/web02/public/frontend/js/app.js"></script>

    <!-- Block custom-scripts - Đục lỗ trên giao diện bố cục chung, đặt tên là `custom-scripts` -->
    {% block customscripts %}
    {% endblock %}
    <!-- End block custom-scripts -->
</body>

</html>