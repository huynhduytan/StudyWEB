{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Danh sách Nhà sản xuất
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="them" class="btn btn-primary">
    <span data-feather="plus"></span> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Mã Nhà sản xuất</th>
            <th>Tên Nhà sản xuất</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        {% for nhasanxuat in ds_nhasanxuat %}
        <tr>
            <td>{{ nhasanxuat.nsx_ma }}</td>
            <td>{{ nhasanxuat.nsx_ten }}</td>
            <td>
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `nsx_ma` -->
                <a href="sua?nsx_ma={{ nhasanxuat.nsx_ma }}" class="btn btn-warning">
                    <span data-feather="sua"></span> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `nsx_ma` -->
                <a href="xoa?nsx_ma={{ nhasanxuat.nsx_ma }}" class="btn btn-danger">
                    <span data-feather="xoa"></span> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody> 
</table>
{% endblock %}
{# End Nội dung trong block content #}